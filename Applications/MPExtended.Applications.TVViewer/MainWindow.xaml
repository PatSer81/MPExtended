<Window x:Class="MPExtended.Applications.TVViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,281">
            <Button Height="25" Width="125" x:Name="btnHome">Home</Button>
            <Button Height="25" Width="123" x:Name="btnSchedules"  Click="Button_Click">
                Schedules
            </Button>
            <Button Height="25" Width="123" x:Name="btnViewer">
                Viewer
            </Button>
        </StackPanel>
        <Frame x:Name="contentFrame" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0,28,0,0" NavigationUIVisibility="Hidden">
            
        </Frame>
    </Grid>
</Window>
